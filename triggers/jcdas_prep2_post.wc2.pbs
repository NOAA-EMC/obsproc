#!/bin/bash
#PBS -N obsproc_%JTYP%_prep2_post_%PDY%_%CC%_%DESC%
#PBS -j oe
#PBS -S /bin/bash
#PBS -l walltime=0:30:00
#PBS -q dev
#PBS -A OBSPROC-DEV
#PBS -l select=1:ncpus=1:mem=1500mb
